<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.dao.CarMapper">

    <resultMap id="BaseResult" type="car">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="type" property="type"></result>
        <result column="sitnum" property="sitnum"></result>
        <result column="cid" property="cid"></result>
        <result column="price" property="price"></result>
        <result column="number" property="number"></result>
        <result column="picture" property="picture"></result>
    </resultMap>

    <select id="selectAllByPrice" resultMap="BaseResult">
        select * from sys_car order by price;
    </select>

    <select id="selectById" resultMap="BaseResult">
        select * from sys_car where id=#{id};
    </select>

</mapper>